<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.jmelzer.myttr"
          android:versionCode="4"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="16"/>
    <application android:name="com.jmelzer.myttr.MyApplication" android:theme="@style/MyTheme"
                 android:label="@string/app_name" android:icon="@drawable/myttr">
        <activity android:name=".activities.LoginActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.jmelzer.myttr.activities.AfterLoginActivity"
                  android:label="@string/app_name" android:icon="@drawable/myttr"
                  android:parentActivityName=".activities.MyTTRActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value=".activities.MyTTRActivity"/>
        </activity>
        <activity android:name=".activities.ManualEntriesActivity"
                  android:label="@string/app_name" android:icon="@drawable/myttr"
                  android:parentActivityName=".activities.AfterLoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value=".activities.AfterLoginActivity"/>
        </activity>
        <activity android:name=".activities.PlayerDetailActivity"
                  android:label="@string/app_name" android:icon="@drawable/myttr"
                  android:parentActivityName=".activities.ManualEntriesActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value=".activities.ManualEntriesActivity"/>
        </activity>
        <activity android:name=".activities.ResultActivity"
                  android:label="@string/app_name" android:icon="@drawable/myttr"
                  android:parentActivityName=".activities.ManualEntriesActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value=".activities.ManualEntriesActivity"/>
        </activity>
        <activity android:name=".activities.EnterTTRActivity"
                  android:label="@string/app_name" android:icon="@drawable/myttr"
                  android:parentActivityName=".activities.AfterLoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value=".activities.AfterLoginActivity"/>
        </activity>
        <activity android:name=".activities.MySettingsActivity"
                  android:label="@string/menu_settings"/>

    </application>

    <uses-permission android:name="android.permission.INTERNET"/>
    <!--todo remove this later-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>
