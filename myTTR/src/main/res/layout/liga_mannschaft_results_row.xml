<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="?android:attr/listPreferredItemHeight">

    <LinearLayout
        style="@style/RowListStyle"
        xmlns:android="http://schemas.android.com/apk/res/android">


        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            style="@style/TextListStyle"
            android:layout_weight="4"
            android:text="So. 	25.01.2015 	14:00"/>

        <TextView
            android:id="@+id/heim"
            android:layout_width="0dp"
            style="@style/TextListStyle"
            android:layout_marginLeft="10dp"
            android:layout_weight="4"
            android:text="Borussia Dortmund"/>

        <TextView
            android:id="@+id/gast"
            android:layout_width="0dp"
            style="@style/TextListStyle"
            android:layout_marginLeft="10dp"
            android:layout_weight="4"
            android:text="TTG St. Augustin II"/>

        <TextView
            android:id="@+id/result"
            android:layout_width="0dp"
            style="@style/TextListStyle"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="9:4"/>

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="0dp"
            style="@style/TextListStyle"
            android:layout_weight="1"
            android:contentDescription="@string/arrow_desc"
            android:src="@drawable/ic_icon_arrow_right_white"/>
    </LinearLayout>
</LinearLayout>