<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="top"
              android:orientation="vertical"
              android:weightSum="1">

    <TextView
        android:id="@+id/textViewMName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="TTG St. Augustin 2. Herren"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="22sp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_kontakt"
            android:textSize="18sp"
            android:layout_weight="3"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewKName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:lines="3"
            android:layout_weight="4"
            android:text="@string/sample_kontakt"
            android:textSize="18sp"
            />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:src="@drawable/ic_action_email_icon_hi"
            android:visibility="invisible"/>

    </LinearLayout>
    <ListView
        android:id="@+id/spiellokale_row"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    </ListView>
</LinearLayout>