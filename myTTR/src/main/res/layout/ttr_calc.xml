<LinearLayout
    android:id="@+id/manual_entries_view_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/txt_player_list"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/txt_player_list"
            android:textSize="16sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_player_list_empty"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/txt_player_list_empty"
            android:textSize="16sp"
            android:visibility="visible"/>


        <LinearLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="24dp"
            android:layout_below="@+id/txt_player_list_empty"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".40"
                android:text="Name"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".20"
                android:text="Punkte"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".10"
                android:text="Sieg?"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".10"
                android:text="    "/>
        </LinearLayout>
        <!--linie-->
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_below="@id/header"
            android:background="#ffffffff"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="400dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/header"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/footer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/buttonshape"
                android:onClick="recalc"
                android:text="@string/calc"/>

            <ListView
                android:id="@+id/playerlistview"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>