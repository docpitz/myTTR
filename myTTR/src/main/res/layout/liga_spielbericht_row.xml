<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/paarung"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="D1-D2"
        android:layout_weight="2"
        android:layout_width="0dp" />

    <TextView
        android:id="@+id/heim"
        android:layout_height="wrap_content"
        android:text="von Hellendall, Herbert"
        android:layout_weight="4"
        android:layout_marginLeft="5dp"
        android:layout_width="0dp"
        />

    <TextView
        android:id="@+id/gast"
        android:layout_height="wrap_content"
        android:text="von Fritzhausen, Walter"
        android:layout_marginLeft="10dp"
        android:layout_weight="4"
        android:layout_width="0dp"
        />
    <TextView
        android:id="@+id/set_result"
        android:layout_height="wrap_content"
        android:text="3:2"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:layout_width="0dp"/>
    <ImageView
        android:id="@+id/arrow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_icon_arrow_right_white"
        android:contentDescription="@string/arrow_desc"/>
</LinearLayout>