<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:ignore="HardcodedText">

    <LinearLayout
        style="@style/RowListStyle"
        xmlns:android="http://schemas.android.com/apk/res/android"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/paarung"
            style="@style/TextListStyle"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="left"
            android:text="D1-D2"/>

        <TextView
            android:id="@+id/heim"
            style="@style/TextListStyle"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="4"
            android:text="von Hellendall, Herbert"
            />

        <TextView
            android:id="@+id/gast"
            style="@style/TextListStyle"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="4"
            android:text="von Fritzhausen, Walter"
            />

        <TextView
            android:id="@+id/set_result"
            style="@style/TextListStyle"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="3:2"/>

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/arrow_desc"
            android:src="@drawable/ic_icon_arrow_right_white"/>
    </LinearLayout>
</LinearLayout>